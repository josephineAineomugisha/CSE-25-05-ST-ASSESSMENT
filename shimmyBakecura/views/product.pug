doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Dashboard
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/styles.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css')
  style.
    .layout {
      display: grid;
      grid-template-areas:
        "cards form"
        "table table";
      grid-template-columns: 2fr 1fr;
      grid-template-rows: auto 1fr;
      gap: 40px;
      padding: 40px;
      width: 100%;
      min-height: 100vh;
    }
    .cards-container {
      grid-area: cards;
    }
    .product-form {
      grid-area: form;
      align-self: start;
    }
    .product-table {
      grid-area: table;
      margin-top: 0;
    }
    .cards-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
    }
    .card {
      width: 100%;
      height: 100%;
      min-height: 120px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    @media (max-width: 992px) {
      .layout {
        grid-template-areas:
          "cards"
          "form"
          "table";
        grid-template-columns: 1fr;
        grid-template-rows: auto auto 1fr;
        gap: 30px;
      }
      .cards-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    @media (max-width: 576px) {
      .layout {
        grid-template-areas:
          "cards"
          "form"
          "table";
        grid-template-columns: 1fr;
        grid-template-rows: auto auto 1fr;
        gap: 20px;
        padding: 10px;
      }
      .cards-grid {
        grid-template-columns: 1fr;
      }
    }
.layout
  // Cards Section
  .cards-container
    .cards-grid
      .card.p-4
        h6.text-muted Sales
        h3.fw-semibold UGX 50,000,000
        span.badge.bg-success
          i.fa-solid.fa-house
          |  this month
      .card.p-4
        h6.text-muted Orders
        h3.fw-semibold UGX 30,000,000
        span.badge.bg-primary
          i.fa-solid.fa-suitcase
          |  this month
      .card.p-4
        h6.text-muted In Stock
        h3.fw-semibold UGX 20,000,000
        span.badge.bg-danger
          i.fa-solid.fa-truck
          |  this month
      .card.p-4
        h6.text-muted Out of Stock
        h3.fw-semibold 5
        span.badge.bg-success
          i.fa-solid.fa-user
          |  this month
  // Form Section
  form#productform(action='/products' method='POST' class='product-form card p-3')
    h4.mb-3 Add New Product
    .mb-3
      label.form-label(for='productName') Product Name
      input#productName.form-control(type='text' placeholder='Enter product name' name='Name')
    .mb-3
      label.form-label(for='productCategory') Category
      input#productCategory.form-control(type='text' placeholder='Enter product category' name='Category')
    .mb-3
      label.form-label(for='productPrice') Price
      input#productPrice.form-control(type='text' placeholder='Enter product price' name='Price')
      .mb-3
        label.form-label(for='productQuantity') Quantity
        input#productQuantity.form-control(type='number' placeholder='Enter product quantity' name='Quantity')
      .mb-3
        label.form-label(for='productColor') Color
        input#productColor.form-control(type='text' placeholder='Enter product color' name='Color')
      .mb-3 
      span#errorMessage.text-danger
      .mb-3
        span#successAlert.text-success
    button.btn.btn-primary(type='submit') save
    button.btn.btn-danger(type='reset') clear
  // Table Section
  .product-table
    table.table.mt-4
      thead
        tr
          th ID
          th NAME
          th CATEGORY
          th PRICE(UGX)
          th QUANTITY
      tbody
