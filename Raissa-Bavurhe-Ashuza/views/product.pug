doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Add Product
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #eeecec;
      }
      .btn1 {
        background-color: rgb(237, 85, 30);
        color: #fff;
        font-size: 110%;
        font-weight: 600;
      }
      .form-container {
        padding: 20px;
        border: 1px solid #cecece;
        border-radius: 8px;
        background: #fff;
      }
      .price-container,
      .price-container2 {
        padding: 20px;
        border: 1px solid #cecece;
        border-radius: 8px;
        background: #fff;
      }
      .price-container {
        height: 280px;
      }
      .price-container2 {
        height: 100px;
      }
      .btn2 {
        background-color: #bbc2c8;
        color: #000;
        font-size: 110%;
        font-weight: 600;
      }
  body
    .container.mt-5
      .row
        .col-md-6
          .price-container
            h5
          .row.mt-3
            .col
              .price-container2
                h6 In Stock
                p
            .col
              .price-container2
                h6 Out of Stock
                p
        .col-md-6
          .form-container
            h4.mb-3 Add Product
            form#productForm(action="/product" method="post")
              .mb-3
                input#productName.form-control(type="text" name="productName" placeholder="Product Name")
              .mb-3
                input#category.form-control(type="text" name="category" placeholder="Category")
              .mb-3
                input#price.form-control(type="number" name="price" placeholder="Price")
              .mb-3
                input#quantity.form-control(type="number" name="quantity" placeholder="Quantity")
              .mb-3
                input#color.form-control(type="text" name="color" placeholder="Color")
              .mb-3
                input.form-control(type="text" name="image" placeholder="Upload Image")
              .d-flex.justify-content-between.gap-2
                button.btn.btn1.w-50(type="submit") SAVE
                button.btn.btn2.w-50(type="reset") CLEAR

    
      .col-md-8
        h4 Product List
        table.table.table-bordered.table-striped.mt-4
          thead
            tr
              th Name
              th Category
              th Price
              th Quantity
              th Color
          tbody
            if products && products.length
              each product in products
                tr
                  td= product.productName
                  td= product.category
                  td= product.price
                  td= product.quantity
                  td= product.color
            else
              tr
                td(colspan="5" class="text-center") No products available

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    script.
      document.getElementById("productForm").addEventListener("submit", function(event) {
        let inputs = document.querySelectorAll("#productForm input");
        let isValid = true;
        inputs.forEach(input => {
          if (!input.value.trim()) {
            input.classList.add("is-invalid");
            isValid = false;
          } else {
            input.classList.remove("is-invalid");
          }
        });
        if (!isValid) {
          event.preventDefault(); 
        }
      });
